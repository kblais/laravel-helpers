{
    "name": "kblais/laravel-helpers",
    "description": "A collection of helpers for your Laravel application.",
    "require": {
        "php": "^8.0",
        "illuminate/database": "^8.13|^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.23|^7.0",
        "friendsofphp/php-cs-fixer": "^3.5",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Kblais\\LaravelHelpers\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kblais\\LaravelHelpers\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcs": "php-cs-fixer fix",
        "phpunit": "phpunit --verbose --color=always",
        "phpstan": "phpstan analyze --no-progress",
        "test": [
            "@phpstan",
            "@phpunit",
            "@phpcs"
        ]
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Killian Blais",
            "email": "contact@killianblais.fr"
        }
    ]
}
